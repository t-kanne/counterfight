<android.support.v4.widget.DrawerLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<!--  Hauptansicht (Inhalt) -->
	<RelativeLayout 
	    android:id="@+id/main_activity_content"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >

		<TextView
		    android:id="@+id/textView1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true"
		    android:layout_marginLeft="40dp"
		    android:layout_marginTop="126dp"
		    android:textSize="40sp"
		    android:text="counterFIGHT" />
	
	</RelativeLayout>
	
	
	<!--  Navigation Drawer (MenÃ¼) -->
	
	<LinearLayout 
	    xmlns:tools="http://schemas.android.com/tools"
	    android:id="@+id/main_activity_menu"
	    android:layout_width="260dp"
	    android:layout_height="match_parent"
	    android:layout_gravity="start"
	    android:orientation="vertical"
	    tools:context=".LinearLayout"
	    android:background="#3D3D3D" >
	    
	    <!-- ##################################################### -->
	    <!--  Gruppenverwaltung -->
	    
	    <TextView
	        android:id="@+id/textview_navigationdrawer_groupsettings"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/string_navigationdrawer_groupsettings"
	        android:background="@drawable/background_navdraw_subtitles"    
	        android:textSize="22sp"
	        android:textColor="#FFF"
	  	    android:layout_marginBottom="2sp"
	        android:gravity="start" />
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:padding="3sp"
            android:background="?attr/selectableItemBackground" >
            
	        <ImageView 
	            android:id="@+id/imageview_navigationdrawer_allgroups"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:contentDescription="Show All Groups Of User"
	            android:src="@drawable/ic_navdraw_allgroups" />
	    
		  	<TextView
		        android:id="@+id/textview_navigationdrawer_allgroups"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="@string/string_navigationdrawer_allgroups"
		        android:textSize="20sp"
		        android:textColor="#FFF" />
		</LinearLayout>
		
	    <!-- Separator-Line -->
		<include layout="@layout/separator_navdraw"	/>
	  	
	  	<!--  ListView mit allen Gruppen des Nutzers -->
	  	
	  	<ListView
	        android:id="@+id/listview_navigationdrawer_allgroups"
			android:layout_width="240dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left"
	        android:choiceMode="singleChoice"
	        android:divider="@android:color/transparent"
	        android:textSize="15sp"
	        android:padding="3sp"
	        android:dividerHeight="dp" />

	    <!-- Separator-Line -->
		<include layout="@layout/separator_navdraw"	/>  	
	  		  	
	   	<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:padding="3sp"
            android:background="?attr/selectableItemBackground" >
            
	        <ImageView 
	            android:id="@+id/imageview_navigationdrawer_creategroup"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:contentDescription="Create Group"
	            android:src="@drawable/ic_navdraw_creategroup" />
	    
		  	<TextView
		        android:id="@+id/textview_navigationdrawer_creategroup"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="@string/string_navigationdrawer_creategroup"
		        android:textSize="20sp"
		        android:textColor="#FFF" />
		</LinearLayout>

	    <!-- Separator-Line -->
		<include layout="@layout/separator_navdraw"	/>	   	
	   			
	   	<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:padding="3sp"
            android:background="?attr/selectableItemBackground" >
		
	        <ImageView 
	            android:id="@+id/imageview_navigationdrawer_searchgroup"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:contentDescription="Create Group"
	            android:src="@drawable/ic_navdraw_searchgroup" />
	    
		  	<TextView
		        android:id="@+id/textview_navigationdrawer_searchgroup"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="@string/string_navigationdrawer_searchgroup"
		        android:textSize="20sp"
		        android:textColor="#FFF" />
		</LinearLayout>

	    
	    <!-- ##################################################### --> 
		<!-- Account-Verwaltung -->
	    
	   	<TextView
	        android:id="@+id/textview_navigationdrawer_accountsettings"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5sp"
	        android:layout_marginBottom="2sp"
	        android:text="@string/string_navigationdrawer_accountsettings"
	        android:background="@drawable/background_navdraw_subtitles"
	        android:textSize="22sp"
	        android:textColor="#FFF"
	        android:gravity="start" />
	   	
	   	<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:padding="3sp"
            android:background="?attr/selectableItemBackground" >
            
	        <ImageView 
	            android:id="@+id/imageview_navigationdrawer_changeaccountdata"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:contentDescription="Show All Groups Of User"
	            android:src="@drawable/ic_navdraw_changepassword" />
	    
		  	<TextView
		        android:id="@+id/textview_navigationdrawer_changeaccountdata"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="@string/string_navigationdrawer_changeaccountdata"
		        android:textSize="20sp"
		        android:textColor="#FFF" />
		</LinearLayout>

	    <!-- Separator-Line -->
		<include layout="@layout/separator_navdraw"	/>	   	
	   			
	   	<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:padding="3sp"
            android:background="?attr/selectableItemBackground" >
            
	        <ImageView 
	            android:id="@+id/imageview_navigationdrawer_logout"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:contentDescription="Show All Groups Of User"
	            android:src="@drawable/ic_navdraw_logout" />
	    
		  	<TextView
		        android:id="@+id/textview_navigationdrawer_logout"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="@string/string_navigationdrawer_logout"
		        android:textSize="20sp"
		        android:textColor="#FFF" />
		</LinearLayout>
	   	
	   	<!-- ##################################################### -->
	   	<!-- sonstige Einstellungen -->
	   	
	   	<TextView
	        android:id="@+id/textview_navigationdrawer_othersettings"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/string_navigationdrawer_othersettings"
	        android:background="@drawable/background_navdraw_subtitles"
	        android:textSize="22sp"
	        android:layout_marginTop="5sp"
	        android:layout_marginBottom="2sp"
	        android:textColor="#FFF"
	        android:gravity="start" />
	   	
	   	<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:padding="3sp"
            android:background="?attr/selectableItemBackground" >
            
	        <ImageView 
	            android:id="@+id/imageview_navigationdrawer_settings"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:contentDescription="Show All Groups Of User"
	            android:src="@drawable/ic_navdraw_settings" />
	    
		  	<TextView
		        android:id="@+id/textview_navigationdrawer_settings"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="@string/string_navigationdrawer_settings"
		        android:textSize="20sp"
		        android:textColor="#FFF" />
		</LinearLayout>

	    <!-- Separator-Line -->
		<include layout="@layout/separator_navdraw"	/>   	
	   			
	   	<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:padding="3sp"
            android:background="?attr/selectableItemBackground" >
            
	        <ImageView 
	            android:id="@+id/imageview_navigationdrawer_faq"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:contentDescription="Show All Groups Of User"
	            android:src="@drawable/ic_navdraw_faq" />
	    
		  	<TextView
		        android:id="@+id/textview_navigationdrawer_faq"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="@string/string_navigationdrawer_faq"
		        android:textSize="20sp"
		        android:textColor="#FFF" />
		</LinearLayout>
		
	    <!-- Separator-Line -->
		<include layout="@layout/separator_navdraw"	/>
	   	
	   	<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:padding="3sp"
            android:background="?attr/selectableItemBackground" >
            
	        <ImageView 
	            android:id="@+id/imageview_navigationdrawer_developerinfo"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:contentDescription="Show All Groups Of User"
	            android:src="@drawable/ic_navdraw_developerinfo" />
	    
		  	<TextView
		        android:id="@+id/textview_navigationdrawer_developerinfo"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="@string/string_navigationdrawer_developerinfo"
		        android:textSize="20sp"
		        android:textColor="#FFF" />
		</LinearLayout>

	    
	</LinearLayout>
	
</android.support.v4.widget.DrawerLayout>