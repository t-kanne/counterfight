<android.support.v4.widget.DrawerLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<!--  Hauptansicht (Inhalt) -->
	<RelativeLayout 
	    android:id="@+id/main_activity_content"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >

		<TextView
		    android:id="@+id/textView1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true"
		    android:layout_marginLeft="40dp"
		    android:layout_marginTop="126dp"
		    android:textSize="40sp"
		    android:text="counterFIGHT" />
	
	</RelativeLayout>
	
	
	<!--  Navigation Drawer (MenÃ¼) -->
	
	<LinearLayout 
	    xmlns:tools="http://schemas.android.com/tools"
	    android:id="@+id/main_activity_menu"
	    android:layout_width="260dp"
	    android:layout_height="match_parent"
	    android:layout_gravity="start"
	    android:orientation="vertical"
	    tools:context=".LinearLayout"
	    android:background="#3D3D3D" >
	    
	    <!-- ##################################################### -->
	    <!--  Gruppenverwaltung -->
	    
	    <TextView
	        android:id="@+id/textview_navigationdrawer_groupsettings"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Gruppenverwaltung"
	        android:textSize="25sp"
	        android:textColor="#FFF"
	        android:gravity="start" />
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="?attr/selectableItemBackground" >
            
	        <ImageView 
	            android:id="@+id/imageview_navigationdrawer_allgroups"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:contentDescription="Show All Groups Of User"
	            android:src="@drawable/ic_navdraw_allgroups" />
	    
		  	<TextView
		        android:id="@+id/textview_navigationdrawer_allgroups"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="Alle Gruppen"
		        android:textSize="20sp"
		        android:textColor="#FFF" />
		</LinearLayout>
	  	
	  	<!--  ListView mit allen Gruppen des Nutzers -->
	  	
	  	<ListView
	        android:id="@+id/listview_navigationdrawer_allgroups"
			android:layout_width="240dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left"
	        android:choiceMode="singleChoice"
	        android:divider="@android:color/transparent"
	        android:textSize="15sp"
	        android:dividerHeight="dp" />
	  		  	
	   	<TextView
	        android:id="@+id/textview_navigationdrawer_creategroup"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Gruppe erstellen"
	        android:textSize="15sp"
	        android:textColor="#FFF" /> 
	    
	   	<TextView
	        android:id="@+id/textview_navigationdrawer_searchgroup"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Gruppe beitreten"
	        android:textSize="15sp"
	        android:textColor="#FFF" />
	    
	    <!-- ##################################################### --> 
		<!-- Account-Verwaltung -->
	    
	   	<TextView
	        android:id="@+id/textview_navigationdrawer_accountsettings"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Account"
	        android:textSize="20sp"
	        android:textColor="#FFF"
	        android:gravity="start" />
	    
	   	<TextView
	        android:id="@+id/textview_navigationdrawer_othersettings"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="sonstiges"
	        android:textSize="20sp"
	        android:textColor="#FFF"
	        android:gravity="start" />
	   	
	   	<!-- ##################################################### -->
	   	<!-- sonstige Einstellungen -->
	   <ListView
	        android:id="@+id/listview_navigationdrawer_test"
			android:layout_width="240dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left"
	        android:choiceMode="singleChoice"
	        android:divider="@android:color/transparent"
	        android:textSize="15sp"
	        android:dividerHeight="dp" />

	    
	</LinearLayout>
	
</android.support.v4.widget.DrawerLayout>